group martin
        desc Martin's Favorite Strips
        include userfriendly shermanslagoon dilbert garfield xkcd ruthe ulistein
end


strip userfriendly
        name UserFriendly
        homepage http://ars.userfriendly.org/cartoons/?id=%Y%m%d
        type search
        searchpattern SRC="(http://www.userfriendly.org/cartoons/archives/%y[a-z]{3}/uf[0-9]{6}\.gif)"
        provides any
end

strip shermanslagoon
        name ShermansLagoon
        homepage http://shermanslagoon.com/
        type search
	searchpattern (https://safr.kingfeatures.com/idn/[a-z]*/zone/js/content.php\?file=[0-9a-zA-Z=]*)
        provides latest
end

strip dilbert
        name Dilbert
        homepage https://www.dilbert.com/
        type search
	baseurl https://assets.amuniversal.com/
	searchpattern alt=" - Dilbert by Scott Adams".*src="//assets.amuniversal.com/([a-z0-9]*)"
        provides latest
end

strip garfield
        name Garfield
        homepage https://www.gocomics.com/garfield/%Y/%m/%d
        type search
        searchpattern src="(https://assets.amuniversal.com/[a-z0-9]*)"
        provides any

end

strip xkcd
        name xkcd
        homepage http://xkcd.com
        type search
        searchpattern src="//(imgs.xkcd.com/comics/[^"]*)"
        provides latest
end

strip nichtlustig
        name NichtLustig
        homepage http://www.nichtlustig.de/main.html
        type search
        searchpattern (http://static.nichtlustig.de/comics/full/[0-9]{6}.jpg)
        provides latest
end

strip ruthe
	name Ruthe
	homepage http://www.ruthe.de/index.php
	type search
	baseurl  http://www.ruthe.de/
	searchpattern src="(/cartoons/strip_[0-9]{4}.jpg)"
	provides latest
end

strip ulistein
	name UliStein
	homepage http://ulistein.de
	type generate
	imageurl http://ulistein.de/cartoon.php?tag=1
	provides latest
end

